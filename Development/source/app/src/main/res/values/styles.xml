<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="HomePage">
        <item name="android:background">@drawable/background1704</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="BackgroundTextFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/background1704</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="CustomAppTheme" parent="Theme.AppCompat">
        <item name="android:textColorPrimaryDisableOnly">@color/colorPrimary</item>
        <item name="colorAccent">#e91e63</item>
    </style> <style name="TextColor" parent="@android:style/TextAppearance.Medium">
    <item name="android:textColor">@color/colorPrimary</item>
</style>

</resources>
